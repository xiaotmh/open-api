  </update>
  <update id="updateByPrimaryKey" parameterType="Parameter">
    update tb_parameter
    set `name` = #{name,jdbcType=VARCHAR},
      description = #{description,jdbcType=VARCHAR},
      `state` = #{state,jdbcType=INTEGER}
    where id = #{id,jdbcType=INTEGER}
  </update>

